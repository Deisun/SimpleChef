<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_background"
    tools:context=".ui.recipe_create.CreateDescriptionFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewDisplayImage"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginTop="60dp"
                android:src="@drawable/background_login_other"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/addImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="-65px"
                android:background="@drawable/add_circle"
                android:tint="@color/blue"
                app:layout_constraintStart_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:alpha=".6"
                android:paddingLeft="20dp"
                android:paddingBottom="3dp"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"

                app:fontFamily="@font/ostrich" />


            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/input_text_field"
                android:ems="10"
                android:hint="Zach's Exquisite Ramen"
                android:maxLength="25"
                android:inputType="textCapSentences"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorGreyDark"
                android:textColorHint="@color/colorGrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:alpha=".6"
                android:paddingLeft="20dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Cost"
                android:textColor="@color/colorGreyDark"
                android:textColorHint="@color/colorGreyDark"
                android:textSize="30sp"
                app:fontFamily="@font/ostrich" />

            <EditText
                android:id="@+id/editTextPrice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:autofillHints="Price"
                android:background="@drawable/input_text_field"
                android:ems="10"
                android:hint=" ~ $5.45"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:inputType="numberDecimal"
                android:textColor="@color/colorGreyDark"
                android:textColorHint="@color/colorGrey"
                />

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:alpha=".6"
                android:paddingLeft="20dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Time"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                app:fontFamily="@font/ostrich" />

            <EditText
                android:id="@+id/editTextTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:autofillHints="Time"
                android:background="@drawable/input_text_field"
                android:ems="10"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:hint="1 Hour"
                android:textColor="@color/colorGreyDark"
                android:textColorHint="@color/colorGrey"
                android:inputType="numberDecimal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blue"
                android:text="+ Create"



                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>