<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recipe_create.recipe_create_fragment_s1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="406dp"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="Add Ingredients"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/fragment_activity_recipe_create_s1_size_spinner"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/fragment_activity_recipe_create_s1_editText_quantity"
            android:layout_width="102dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:gravity="center"
            android:hint="How Much?"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/fragment_activity_recipe_create_s1_size_spinner"
            app:layout_constraintTop_toTopOf="@+id/fragment_activity_recipe_create_s1_size_spinner" />

        <EditText
            android:id="@+id/fragment_activity_recipe_create_s1_editText_ingredient"
            android:layout_width="140dp"
            android:layout_height="51dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Ingredient"
            android:inputType="textPersonName"
            app:layout_constraintStart_toEndOf="@+id/fragment_activity_recipe_create_s1_editText_quantity"
            app:layout_constraintTop_toTopOf="@+id/fragment_activity_recipe_create_s1_editText_quantity" />

        <Button
            android:id="@+id/fragment_activity_recipe_create_s1_button_addIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="32dp"
            android:text="Send It"
            app:layout_constraintStart_toEndOf="@+id/fragment_activity_recipe_create_s1_editText_price"
            app:layout_constraintTop_toTopOf="@+id/fragment_activity_recipe_create_s1_editText_price" />

        <EditText
            android:id="@+id/fragment_activity_recipe_create_s1_editText_price"
            android:layout_width="101dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Price"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_activity_recipe_create_s1_size_spinner" />

        <Button
            android:id="@+id/fragment_activity_recipe_button_delete"
            android:layout_width="98dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:text="Delete Previous"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

        <TextView
            android:id="@+id/fragment_activity_recipe_create_s1_TextView_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/scrollView3"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="407dp"
            android:layout_height="178dp"
            android:layout_marginTop="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/fragment_activity_recipe_create_s1_linearLayout_recipeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>


    </android.support.constraint.ConstraintLayout>
</FrameLayout>