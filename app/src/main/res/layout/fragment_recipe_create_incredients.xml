<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_background"
    tools:context=".ui.recipe_create.CreateIngredientsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/ostrich"
                android:text="Create Recipe"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <LinearLayout
                    android:id="@+id/linearLayoutGeneral"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/buttonGeneralInfo"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".2"
                        android:alpha=".8"
                        android:background="@drawable/add_circle"
                        android:backgroundTint="@color/green"
                        android:text="+ Add Item"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/textViewGeneral"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:alpha="1"
                        android:background="#fefbf7"
                        android:fontFamily="@font/ostrich"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="General"
                        android:textColor="@color/colorGreyDarkNav"
                        android:textSize="24sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visibleGeneral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/background_green_opacity_half"
                        android:ems="10"
                        android:hint="Enter Name"
                        android:inputType="textCapSentences"
                        android:maxLength="25"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:alpha="1"
                        android:background="@color/colorPrimaryMain"
                        android:text="Name"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        app:fontFamily="@font/azoft_sans" />

                    <EditText
                        android:id="@+id/editTextTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/background_green_opacity_half"
                        android:ems="10"
                        android:hint="Enter cost"
                        android:inputType="numberDecimal"
                        android:maxLength="25"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:alpha="1"
                        android:background="@color/colorPrimaryMain"
                        android:text="Cost"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        app:fontFamily="@font/azoft_sans" />

                    <EditText
                        android:id="@+id/editTextTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/background_green_opacity_half"
                        android:ems="10"
                        android:hint="Enter Time"
                        android:inputType="text"
                        android:maxLength="25"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="10dp"
                        android:alpha="1"
                        android:background="@color/colorPrimaryMain"
                        android:text="Time"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        app:fontFamily="@font/azoft_sans" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayoutIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".2"
                        android:alpha=".8"
                        android:background="@drawable/add_circle"
                        android:backgroundTint="@color/blue"
                        android:text="+ Add Item"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/textViewIngredient"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:alpha="1"
                        android:background="#fefbf7"
                        android:fontFamily="@font/ostrich"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Ingredients"
                        android:textColor="@color/colorGreyDarkNav"
                        android:textSize="24sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visibleIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp">

                            <EditText
                                android:id="@+id/editTextIngredient"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="1"
                                android:background="@color/colorPrimaryMain"
                                android:gravity="start"
                                android:hint=""
                                android:inputType="text"
                                android:paddingStart="15dp"
                                android:paddingLeft="30dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="15dp"
                                android:paddingRight="30dp"
                                android:paddingBottom="5dp"
                                android:textAlignment="textStart"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/asdfjk"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha=".7"
                                android:background="@color/colorWhite"
                                android:fontFamily="@font/azoft"
                                android:text="Ingredient"
                                android:textColor="@color/colorBlack"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="@+id/fragment_activity_recipe_create_s1_editText_price"
                                app:layout_constraintEnd_toStartOf="@+id/fragment_activity_recipe_create_s1_editText_price"
                                app:layout_constraintHorizontal_bias="0.472"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/fragment_activity_recipe_create_s1_editText_price" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="101dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp">

                            <EditText
                                android:id="@+id/editTextPrice"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="1"
                                android:background="@color/colorPrimaryMain"
                                android:hint=""
                                android:inputType="numberDecimal"
                                android:paddingStart="15dp"
                                android:paddingLeft="30dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="15dp"
                                android:paddingRight="30dp"
                                android:paddingBottom="5dp"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textViewPrice"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha=".7"
                                android:background="@color/colorWhite"
                                android:fontFamily="@font/azoft"
                                android:text="Price"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="101dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp">

                            <EditText
                                android:id="@+id/editTextQuantity"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="1"
                                android:background="@color/colorPrimaryMain"
                                android:hint=""
                                android:inputType="text"
                                android:paddingStart="15dp"
                                android:paddingLeft="30dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="15dp"
                                android:paddingRight="30dp"
                                android:paddingBottom="5dp"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textViewQuantity"
                                android:layout_width="101dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha=".7"
                                android:background="@color/colorWhite"
                                android:fontFamily="@font/azoft"
                                android:text="Quantity"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="15dp">
                            <Button
                                android:id="@+id/buttonAddIngredient"
                                android:layout_width="50dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"

                                android:background="@color/blue"
                                android:text="Add"
                                android:textColor="@color/colorWhite" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_activity_recipe_create_s1_linearLayout_recipeView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <Button
                        android:id="@+id/buttonDeleteIngredient"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="#999999"
                        android:text="Delete"
                        app:layout_constraintEnd_toEndOf="parent" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutDirections"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/buttonDirections"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".2"
                        android:alpha=".8"
                        android:background="@drawable/add_circle"
                        android:backgroundTint="@color/colorPrimaryMain"
                        android:text="+ Add Item"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/textViewDirections"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:alpha="1"
                        android:background="#fefbf7"
                        android:fontFamily="@font/ostrich"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Directions"
                        android:textColor="@color/colorGreyDarkNav"
                        android:textSize="24sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visibleDirections"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:alpha=".7"
                            android:background="@color/colorWhite"
                            android:fontFamily="@font/azoft"
                            android:paddingLeft="20dp"
                            android:text="Directions"
                            android:textColor="@color/colorBlack"

                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/editTextDirections"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="1"
                            android:background="@color/colorPrimaryMain"
                            android:gravity="center"
                            android:hint=""
                            android:inputType="textMultiLine"
                            android:paddingStart="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutAddImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".2"
                        android:alpha=".8"
                        android:background="@drawable/add_circle"
                        android:backgroundTint="@color/purple"
                        android:text="+ Add Item"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/textViewAddImage"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:alpha="1"
                        android:background="#fefbf7"
                        android:fontFamily="@font/ostrich"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Add Image"
                        android:textColor="@color/colorGreyDarkNav"
                        android:textSize="24sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visibleAddImage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight=".1"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/buttonUploadExisting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/blue"
                                android:text="Upload Existing" />

                            <Button
                                android:id="@+id/buttonTakeImage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryMainOpacityFull"
                                android:text="Take Image" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageViewAddImage"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:src="@android:drawable/ic_menu_report_image" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/buttonSubmitRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Submit"
                android:background="@color/colorPrimaryMainOpacityFull"/>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>