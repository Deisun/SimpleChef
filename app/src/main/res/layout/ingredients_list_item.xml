<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:background="@drawable/background_green_opacity_half_straight_corners"
    android:layout_marginBottom="1dp">


    <ImageView
        android:id="@+id/imageViewIngredientIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        app:srcCompat="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/textViewIngredientName"
        android:text="Ingredient"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        android:layout_width="140dp"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/textViewIngredientQuantity"
        android:text="Quantity"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_width="100dp"
        android:layout_height="match_parent" />


    <ImageButton
        android:id="@+id/imageButtonRemoveItem"
        android:alpha=".8"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/rounded_remove_button"
        android:layout_width="20dp"
        android:layout_height="20dp" />

</LinearLayout>